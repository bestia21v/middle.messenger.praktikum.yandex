{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "target": "es5",
    "declaration": false,
    "module": "es6",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
